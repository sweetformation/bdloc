{% extends ':layouts:base.html.twig' %}

{% block title %}Bdloc | Accueil{% endblock %}

{% block main_content %}
    {{ render(controller('BdlocAppBundle:CronJob:checkCartTiming')) }}
    <h1 class="center">La plateforme de location multi bandes dessinées</h1>
    <div id="fond"></div>
    <div id="presentation">
        <p>Accédez à une <span class="big">multitude de BDs</span> en quelques clics !</p>
