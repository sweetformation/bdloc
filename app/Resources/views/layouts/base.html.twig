<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Bdloc !{% endblock %}</title>
        {% block stylesheets %}<link rel="stylesheet" type="text/css" href="{{ asset("css/style.css") }}">{% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('faviconBdloc.ico') }}" />
    </head>
    <body>
        {% include ':layouts:header.html.twig' %}
        {% block sidebar %}{% endblock %}
        <main id="main">
            <div id="flash-messages">
            {% for flashMessage in app.session.flashbag.get('notice') %}
                <div class="flash-notice">
                    {{ flashMessage }}
                </div>
            {% endfor %}
            {% for flashMessage in app.session.flashbag.get('error') %}
                <div class="flash-error">
                    {{ flashMessage }}
                </div>
            {% endfor %}
            </div>

            {% block main_content %}{% endblock %}
        </main>

        <footer id="footer">
            <div>Copyright <span id="copyright">&copy;</span> {{ "now"|date("Y") }} BdLoc. Tous droits réservés. | By M-C and Calimero.</div>
        </footer>
        {% block javascripts %}
        <script src="{{ asset('js/jquery.js') }}"></script>
        {% endblock %}
    </body>
</html>
